{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "assignees": ["marwin1991", "witx98"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["**/pom.xml"],
      "matchStrings": [
        "<gradle-all.version>(?<currentValue>.*)</gradle-all.version>"
      ],
      "depNameTemplate": "gradle/gradle",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {"matchDepNames": ["gradle/gradle"], "allowedVersions": "^8\\.\\d+\\.\\d+$"}
  ]
}